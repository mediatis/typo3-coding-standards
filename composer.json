{
    "name": "mediatis/typo3-coding-standard",
    "description": "Mediatis - TYPO3 Coding Standards",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "keywords": [
        "coding",
        "standards",
        "php",
        "typo3"
    ],
    "authors": [
        {
            "name": "Mediatis AG",
            "email": "info@mediatis.de",
            "homepage": "https://www.mediatis.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.mediatis.de",
    "require": {
        "php": "^8.1",
        "ergebnis/composer-normalize": "^2.28.3",
        "friendsofphp/php-cs-fixer": "^3.27.0",
        "helmich/typo3-typoscript-lint": "^3.1.0",
        "mediatis/coding-standards": "^1.0",
        "php-coveralls/php-coveralls": "^2.6.0",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan": "^1.10.34",
        "phpstan/phpstan-phpunit": "^1.3.14",
        "phpstan/phpstan-strict-rules": "^1.5.1",
        "phpunit/phpunit": "^9.6.12",
        "saschaegerer/phpstan-typo3": "^1.9.0",
        "seld/jsonlint": "^1.10.0",
        "ssch/typo3-rector": "^1.1",
        "symfony/yaml": "^5.3.6 || ^6.2.0",
        "typo3/cms-core": "^11.5",
        "typo3/cms-fluid-styled-content": "^11.5.4 || ^12.4.0",
        "typo3/coding-standards": "^0.6.1",
        "typo3/testing-framework": "^7.0.4"
    },
    "autoload": {
        "psr-4": {
            "Mediatis\\Typo3CodingStandards\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/Web"
        }
    }
}

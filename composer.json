{
    "name": "mediatis/typo3-coding-standards",
    "description": "Mediatis - TYPO3 Coding Standards",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "keywords": [
        "coding",
        "standards",
        "php",
        "typo3"
    ],
    "authors": [
        {
            "name": "Mediatis AG",
            "email": "info@mediatis.de",
            "homepage": "https://www.mediatis.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.mediatis.de",
    "bin": [
        "bin/mediatis-typo3-coding-standards-setup"
    ],
    "require": {
        "php": "^8.1",
        "mediatis/typo3-coding-standards": "dev-dev-feature/set-typo3-version-from-composer",
        "typo3/cms-core": "^11.5 || ^12.4"
    },
    "conflict": {
      "typo3/class-alias-loader": "< 1.1.0"
    },
    "autoload": {
        "psr-4": {
            "Mediatis\\Typo3CodingStandards\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/Web"
        }
    }
}
